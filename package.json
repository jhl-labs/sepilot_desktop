{
  "name": "sepilot-desktop",
  "version": "0.9.1",
  "description": "SEPilot Desktop - LLM Desktop Application with AI Agent",
  "author": {
    "name": "JHL Labs",
    "email": "support@jhl-labs.com"
  },
  "main": "dist/electron/electron/main.js",
  "scripts": {
    "postinstall": "echo 'Dependencies installed successfully'",
    "dev": "concurrently -n \"next,electron-init,electron\" -c \"cyan,magenta,green\" \"npm run dev:next\" \"npm run dev:electron-build-once && npm run dev:electron-build\" \"npm run dev:electron\"",
    "dev:next": "next dev --webpack",
    "dev:electron-build-once": "tsc -p tsconfig.build.json",
    "dev:electron-build": "tsc -p tsconfig.build.json --watch --preserveWatchOutput",
    "dev:electron": "electron .",
    "build": "cross-env NODE_OPTIONS=--max-old-space-size=8192 next build --webpack && npm run build:electron",
    "build:electron": "tsc -p tsconfig.build.json",
    "build:app": "pnpm run build && electron-builder",
    "build:portable": "pnpm run build && electron-builder --win portable --config electron-builder.portable.json",
    "build:mac": "pnpm run build && electron-builder --mac",
    "build:win": "pnpm run build && electron-builder --win",
    "build:linux": "pnpm run build && electron-builder --linux",
    "package": "pnpm run build && electron-builder --dir",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix && prettier --write .",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:frontend": "jest --selectProjects frontend",
    "test:backend": "jest --selectProjects backend",
    "test:watch": "jest --watch",
    "test:watch:frontend": "jest --selectProjects frontend --watch",
    "test:watch:backend": "jest --selectProjects backend --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:frontend": "jest --selectProjects frontend --coverage",
    "test:coverage:backend": "jest --selectProjects backend --coverage",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report e2e_tests/test-results/html",
    "test:cdp": "node tests/cdp/run-all-tests.js",
    "test:cdp:chat": "node tests/cdp/test-chat-features.js",
    "test:cdp:extension": "node tests/cdp/test-extension-loading.js",
    "test:cdp:agent": "node tests/cdp/test-langgraph-agents.js",
    "test:cdp:ui": "node tests/cdp/test-ui-components.js",
    "test:cdp:workflow": "node tests/cdp/test-integration-workflows.js",
    "test:cdp:mcp": "node tests/cdp/test-mcp-integration.js",
    "test:cdp:file": "node tests/cdp/test-file-operations.js",
    "test:cdp:rag": "node tests/cdp/test-rag-features.js",
    "test:cdp:settings": "node tests/cdp/test-settings-management.js",
    "test:cdp:ext-features": "node tests/cdp/test-extension-features.js",
    "test:loader": "node tests/scripts/test-extension-loader.js",
    "test:loader:advanced": "node tests/scripts/test-extension-loader-advanced.js",
    "test:loader:runtime": "node tests/scripts/test-extension-runtime.js",
    "depcruise": "depcruise app components lib electron --config .dependency-cruiser.js",
    "depcruise:graph": "depcruise app components lib electron --include-only '^(app|components|lib|electron)' --output-type dot | dot -T svg > dependency-graph.svg"
  },
